# NFTCraft.py

class NFTCraft:
    def __init__(self, platform_name, crafting_features):
        self.platform_name = platform_name
        self.crafting_features = crafting_features
    
    def display_platform_info(self):
        print(f"Platform Name: {self.platform_name}")
        print("Crafting Features:")
        for feature in self.crafting_features:
            print(f"- {feature}")

# Example usage
if __name__ == "__main__":
    platform_name = "NFTCraft"
    crafting_features = [
        "Create NFTs from digital artworks",
        "Mint NFTs on blockchain",
        "Royalty settings for NFT creators",
        "Integration with IPFS for file storage"
    ]
    
    nft_craft = NFTCraft(platform_name, crafting_features)
    nft_craft.display_platform_info()
